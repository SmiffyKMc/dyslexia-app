<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all system CAs for all domains by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specific configuration for Kaggle CDN -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">kaggle-gemma3.b-cdn.net</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Debug overrides for development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config> 